            var selected = $(this).find("option:selected");
            if(selected.hasClass('selection')){
                var parts = selected.val().split(' ');
                location.href=parts[1]+"?constructor="+parts[0];
            }
        });
        $(document).ready(function(){
            $('.addButton').live('click', function(){
                $(this).parentsUntil('.list-wrap').parent().children('.hide').first().clone().removeClass('hide') // clone
                    .appendTo($(this).parentsUntil('.list-wrap').parent().children('.list-items').first());               // append it
                $(this).scrollTo(this);
            });
            $('.close').live('click', function(){
                $(this).parent().remove();
                return false;
            });
        });

